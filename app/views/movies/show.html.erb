<h1 class="title">
  <%= @movie.name %>
  <span class="rating"><%= @movie.rating %></span>
</h1>

<div class="row">
  <div class="col-md-3 text-center">
    <p><%= image_tag @movie.image, class: "poster" %></p>
    <p>
      <a href="#" class="btn btn-sm btn-success">
        <i class="fa fa-shopping-cart"></i> 
        <%= price_for(@movie) %> 
        Buy in HD
      </a>
    </p>
    <p><strong>Genre:</strong> <%= @movie.genre %></p>
    <p><strong>Released:</strong> <%= @movie.year_released %></p>
  </div>
  <div class="col-md-4 summary">
    <h2>Summary</h2>
    <p>
      <%= @movie.summary %>
    </p>
  </div>
  <div class="col-md-3 actors">
    <h2>Cast</h2>
    <ul class="list-unstyled">
      <% @roles.each do |role| %>
        <li><%= link_to role.actor.name, actor_path(role.actor) %></li>
      <% end %>
    </ul>
  </div>
</div>

<div class="row">
  <div class="col-md-7 col-md-offset-3">
    <h3>Reviews</h3>
    <% @movie.reviews.each do |review| %>
      <h4><%= review.user.name %> <%= stars_for(review) %></h4>
      <p><%= review.body %></p>
    <% end %>

    <%= link_to "Write a Review", new_movie_review_path(@movie), class: 'btn btn-success' %>
  </div>
</div>

<div class="row">
  <div class="col-md-9 col-md-offset-3 reviews">
    <h2 class="page-header">Information</h2>
    <table class="table table-striped table-bordered">
      <tr>
        <td><strong>Run Time</strong></td>
        <td><%= @movie.runtime %></td>
      </tr>
    </table>
  </div>
</div>