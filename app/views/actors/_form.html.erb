<%= form_for @actor do |form| %>
  <div class="form-group">
    <%= form.label :name %>
    <%= form.text_field :name, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= form.label :photo %>
    <%= form.file_field :photo %>
  </div>
  <%= form.button title, class: "btn btn-success" %>
<% end %>